{
	"name": "Mining Tool Dev Container",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"forwardPorts": [
		61777,
		5173
	],
	"postCreateCommand": "sudo mkdir -p /home/vscode/.codex && sudo chown -R vscode:vscode /home/vscode/.codex",
	"mounts": [
		{
			"source": "/tmp",
			"target": "/tmp",
			"type": "bind"
		},
		{
			"source": "devcontainer-cargo-cache-${devcontainerId}",
			"target": "/usr/local/cargo",
			"type": "volume"
		},
		{
			"source": "devcontainer-codex-cache-${localEnv:USER}",
			"target": "/home/vscode/.codex",
			"type": "volume"
		}
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"GitHub.copilot",
				"Vue.volar",
				"openai.chatgpt",
				"sumneko.lua",
				"dbaeumer.vscode-eslint",
				"esbenp.prettier-vscode",
				"GitHub.vscode-github-actions"
			]
		}
	}
}
